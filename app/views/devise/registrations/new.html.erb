

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

<h2 class = "text-center">Sign up</h2>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
    <%= f.input :password, label: false, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)  %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation" %>

    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
